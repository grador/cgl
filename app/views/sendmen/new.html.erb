%h1 Создайте сообщение
= form_for :new_message do |m|
  .page_header
    %p
      ='Заголовок:'
      = m.text_area :name, cols: FULL_FIELD, rows: 1
    %p
      ='Текст сообщения:'
      = m.text_area :body, cols: FULL_FIELD, rows: 6
  .page_nav
    %ul
      %li.button
        = link_to'Отменить', :back
      %li.button
        = m.submit 'Сохранить'
  %div#userList
    %div.thead
      %table.thead
        %tr
    <td class="id"> No </td>
    <td class="mail"> E-mail </td>
    <td class="club"> Имя </td>
    <td class="status"> Тип </td>
    <td class="addr"> Адрес </td>
    <td class="status"> Маршрут</td>
    <td class="status"> Статус</td>
    <td class="symbol"> <%= link_to 'Новый пользователь', new_user_path %></td>
  </tr>
</table>
    %div.tbodyshort
      <table class="tbody">
          <% @users.each do |u|%>
          <tr>
            <td class="id"><%= u.id %></td>
            <td class="mail"><%= u.email %></td>
            <td class="club"><%= u.name %></td>
            <td class="status"><%= u.type_owner %></td>
            <td class="addr"><%= u.address %></td>
            <td class="status"><%= u.region %></td>
            <td class="status"><%= u.status %></td>
            <td class="symbol"><%= link_to 'Просмотр', u %></td>
          <% end %>
      </table>